{
  "manifest_version": 3,
  "name": "Audit Expert - Analyseur SEO, Marketing & UX",
  "version": "1.0.0",
  "description": "Extension Chrome professionnelle pour auditer en temps r√©el les performances SEO, Marketing et UX de n'importe quelle page web.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ai-analyzer.js", "advanced-features.js", "advanced-marketing.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>",
    "https://api.anthropic.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["pdf-export.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
